#!/bin/bash

set -e

# Perform an upgrade before booting up web/worker processes
case "$1" in
    zeus)
        gosu zeus zeus db upgrade
    ;;
esac

# Check if we're trying to execute a zeus bin
if [ -f "/usr/src/zeus/bin/$1" ]; then
    set -- tini -- "$@"
    if [ "$(id -u)" = '0' ]; then
        mkdir -p "$REPO_ROOT"
        chown -R zeus "$REPO_ROOT"
        set -- gosu zeus "$@"
    fi
fi

exec "$@"
